<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 col-form-label'%><br />
    <%= f.email_field :email,
      autofocus: true,
      autocomplete: 'email',
      class: 'form-control',
      placeholder: 'email@mail.ail' %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: 'col-sm-2 col-form-label'%><br />
    <%= f.text_field :first_name,
      autocomplete: 'given-name',
      class: 'form-control',
      placeholder: 'Martin' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'col-sm-2 col-form-label'%><br />
    <%= f.text_field :last_name,
      autocomplete: 'family-name',
      class: 'form-control',
      placeholder: 'Ziserman' %>
  </div>

  <div class="form-group">
    <%= f.label :birthdate, class: 'col-sm-2 col-form-label'%><br />
    <%= f.date_field :birthdate,
      autocomplete: 'bday',
      class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 col-form-label'%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,
      autocomplete: 'new-password',
      class: 'form-control',
      placeholder: '********' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label'%><br />
    <%= f.password_field :password_confirmation,
      autocomplete: 'new-password',
      class: 'form-control',
      placeholder: '********' %>
  </div>

  <span class="actions float-right">
    <%= f.submit "Inscription", class: 'btn btn-primary' %>
  </span>
  <span>
    <%= render "devise/shared/links" %>
  </span>
<% end %>


