<h2>Connection</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 col-form-label'%><br />
    <%= f.email_field :email,
      autofocus: true,
      autocomplete: 'email',
      class: 'form-control',
      placeholder: 'email@mail.ail' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Mot de passe', class: 'col-sm-2 col-form-label'%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,
      autocomplete: 'new-password',
      class: 'form-control',
      placeholder: '********' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <span class="form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, 'Se souvenir de moi (more cookies please)', class: 'form-check-label' %>
    </span>
  <% end %>

  <span class="actions float-right">
    <%= f.submit "Connection", class: 'btn btn-primary' %>
  </span>
<% end %>

<%= render "devise/shared/links" %>
