
  <div class="card border">
    <div class='card-header flex-row d-flex justify-content-between align-items-center'>
      <%= image_tag(project.landscape&.url, height: 200) if project.landscape %>
      <div>
        <%= link_to project.name, project_path(project) %>
      </div>
      <div>
        <%= render 'badge', state: project.aasm_state %>
      </div>
    </div>
    <div class="card-body">
      <%= render 'completion', project: project %>
      <% project.categories.pluck(:name).map do |category| %>
        <%= render 'category', category: category %>
      <% end %>
    </div>
  </div>
