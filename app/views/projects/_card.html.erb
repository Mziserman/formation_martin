
  <div class="card border">
    <div class='card-header flex-row d-flex justify-content-between align-items-center p-0'>
      <%= image_tag(project.landscape&.url, class: 'card-img') if project.landscape %>
      <div class="card-img-overlay">
        <span>
          <%= link_to project.name, project_path(project) %>
        </span>
        <span class='float-right'>
          <%= render 'badge', state: project.aasm_state %>
        </span>
      </div>
    </div>
    <div class="card-body">
      <%= render 'completion', project: project %>
      <% project.categories.pluck(:name).map do |category| %>
        <%= render 'category', category: category %>
      <% end %>
    </div>
  </div>
