<div class='flex-row d-flex justify-content-between align-items-center'>
  <span class='pb-2 pt-2'>Completion : <%= percent_print(project.completion) %></span>
  <span class='pb-2 pt-2'><%= currency_print(project.total_collected)%> / <%= currency_print(project.amount_wanted) %></span>
  <span class='pb-2 pt-2'><%= link_to :donate %></span>
</div>
<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated"
    role="progressbar"
    aria-valuenow="<%= project.completion * 100 %>"
    aria-valuemin="0"
    aria-valuemax="100"
    style="width: <%= project.completion * 100 %>%"></div>
</div>
<br/>
