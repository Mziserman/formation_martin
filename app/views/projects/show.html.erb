
<div class='row'>
  <div class='col-sm-12'>
    <% if @record.thumbnail.present? %>
      <%= render 'layouts/shared/image', url: @record.landscape.url %>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class='col-sm-3'>
    <% if @record.thumbnail.present? %>
      <%= render 'layouts/shared/image', url: @record.thumbnail.url %>
    <% end %>
  </div>
  <div class='col-sm-9'>
    <div class='flex-row d-flex justify-content-between align-items-center'>
      <div class='p-2'>
        <h1><%= @record.name %></h1>
      </div>
      <div class='p-2'>
        <%= render 'badge', state: @record.aasm_state %>
      </div>
    </div>
    <div class='pl-2 pr-2'>
      <%= render 'completion', project: @record %>
    </div>
  </div>
</div>
<br />

<p><%= @record.small_blurb %></p>
<p><%= @record.long_blurb %></p>


